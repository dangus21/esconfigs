{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"strict": false,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"outDir": "./dist",
		"noImplicitAny": false,
		"resolveJsonModule": true,
		"types": [
			"jest",
			"node"
		],
		"isolatedModules": true
	},
	"include": [
		"**/*.ts",
		"src/**/*",
		"**/*.test.ts",
		"**/*.spec.ts"
	],
	"exclude": [
		"node_modules"
	]
}